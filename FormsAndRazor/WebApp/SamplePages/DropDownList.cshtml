@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "DropDownList";

    var choice = Request.Form["CodingSamplePage"];
}

@section banner{
    <h1>DropDownList</h1>
}
<h1>DropDown (select tag)</h1>
@if (IsPost)
{

    switch (choice.ToUpper())
    {
        case "TEXTBOXES":
            {
                Response.Redirect("TextBoxes.cshtml");
                break;
            }
        case "RADIOBUTTONS":
            {
                Response.Redirect("RadioButtons.cshtml");
                break;
            }
        case "CHECKBOXES":
            {
                Response.Redirect("CheckBoxes.cshtml");
                break;
            }
        default:
            {
                <p><span style="color:firebrick">Make a selection from the dropdown choices</span></p>
                break;
            }

    }
}

<form id="theform" method="post">
    <div class="row">
        <div class="col-md-offset-1">
            <label id="label1" for="CodingSamplePage">Select the sample to view:</label>&nbsp;&nbsp;
            <!--The dropdown list (aka "Combo-box") is a set of two tags.
                The control is the select tag; the contents is the option tag
                You may have several option tags, each representing a line item <li> in the control
                The option tag has two components: value, which is hidden, and a visible text string-->
            <select id="CodingSamplePage" name="CodingSamplePage">
                <option value="">select...</option>
                <option value="">TextBoxes</option>
                <option value="">RadioButtons</option>
                <option value="">CheckBoxes</option>
            </select>&nbsp;&nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-1">
            <input type="submit" class="btn btn-primary" id="formButton" name="formButton" />
        </div>
    </div>
</form> 